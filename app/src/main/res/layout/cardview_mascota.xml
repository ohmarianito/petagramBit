<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMascota"
    app:cardCornerRadius="@dimen/corner_radius_cardview"
    android:layout_marginLeft="@dimen/dp30_Value"
    android:layout_marginRight="@dimen/dp30_Value"
    android:layout_marginTop="@dimen/dp30_Value">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/imgUrlCV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/perro"
            android:layout_marginTop="15dp"
            >
        </ImageView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"

            >
            <ImageView
                android:id="@+id/imgFavCV"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/hueso"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="0dp"
                android:visibility="visible">
            </ImageView>

            <TextView
                android:id="@+id/tvNombreCV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="36dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/tvLikesCV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_toLeftOf="@id/imgStarCV"
                android:text="@string/rate"
                android:textSize="20sp"
                android:layout_marginTop="1dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgStarCV"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/huesoamarillo">

            </ImageView>
        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>